<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/b_title_border"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="16"
                    android:textSize="20sp"
                    android:text="手动添加商品"
                    android:textColor="#ff0000"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/return_iv_btn"
                android:layout_width="45dp"
                android:layout_marginLeft="5dp"
                android:layout_height="45dp"
                android:src="@mipmap/return_a" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <RelativeLayout
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="70dp">

                    <AutoCompleteTextView
                        android:id="@+id/auto_query_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="10dp"
                        android:singleLine="true"
                        android:background="@drawable/iv_border"
                        android:completionThreshold="1"
                        android:hint="输入商品名搜索"
                        android:paddingLeft="10dp" />

                    <ImageView
                        android:id="@+id/iv_auto_clear"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="1dp"
                        android:src="@mipmap/clear" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_query"
                    android:layout_width="65dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/query_border"
                    android:src="@mipmap/query" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="45dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="条形号码："
                />

            <TextView
                android:id="@+id/et_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text=""
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="商品名称："
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="无"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="出售数量："
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/remove_sum"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/remove" />

                <EditText
                    android:id="@+id/et_sums"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/auto_text_border"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="4"
                    android:text="1"
                    />

                <ImageView
                    android:id="@+id/add_sum"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/add" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="商品类型："
                />

            <TextView
                android:id="@+id/tv_shang_ping_lei_xing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="无"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="库存数量："
                />

            <TextView
                android:id="@+id/tv_ku_cun_sum_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="0"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="商品价格："
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >
                    <EditText
                        android:id="@+id/et_jia_ge_zheng_shu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:maxLength="5"
                        android:lines="1"
                        android:textColor="#ff0000"
                        android:hint="价格可改"
                        android:text="0"
                        />
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:textSize="20sp"
                        android:text="."
                        />
                    <EditText
                        android:id="@+id/et_jia_ge_xiao_shu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:maxLength="2"
                        android:inputType="number"
                        android:lines="1"
                        android:text="00"
                        android:gravity="center"
                        android:textColor="#ff0000"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/add_sang_pin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/add_border"
        android:text="添 加"
        android:textColor="#ffffff"
        android:textSize="26dp"
        android:textStyle="bold" />
</RelativeLayout>