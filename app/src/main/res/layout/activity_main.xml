<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




    <RelativeLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="60dp"
        android:layout_height="match_parent">

    </RelativeLayout>


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <View
            android:layout_width="match_parent"
            android:background="#9e9e9e"
            android:layout_height="1dp"></View>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#ffffff"
            >
        
        <ImageView
            android:id="@+id/iv_shao"
            android:src="@mipmap/button_21"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_ji_lu"
            android:src="@mipmap/button_12"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/iv_ku_cun_guan_li"
            android:src="@mipmap/button_10"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/iv_ge_ren_zhong_xin"
                android:src="@mipmap/button_04"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>
        
    </RelativeLayout>

    </RelativeLayout>
</LinearLayout>